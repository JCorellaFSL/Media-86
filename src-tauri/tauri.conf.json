{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "Media-86",
  "version": "1.0.0",
  "identifier": "com.media-86.app",
  "build": {
    "beforeDevCommand": "npm run dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "npm run build",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "title": "Media-86",
        "width": 1400,
        "height": 900,
        "minWidth": 800,
        "minHeight": 600,
        "resizable": true,
        "maximized": false,
        "decorations": true,
        "center": true
      }
    ],
    "security": {
      "csp": null,
      "assetProtocol": {
        "enable": true,
        "scope": [
          "$APP/*",
          "**"
        ]
      }
    }
  },
  "plugins": {
    "cli": {
      "description": "Media-86 Image Viewer",
      "args": [
        {
          "name": "file",
          "index": 1,
          "takesValue": true,
          "description": "Image file to open"
        }
      ]
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "fileAssociations": [
      {
        "ext": [
          "jpg",
          "jpeg",
          "png",
          "gif",
          "bmp",
          "webp",
          "svg",
          "tiff",
          "ico"
        ],
        "name": "Image File",
        "role": "Viewer"
      }
    ]
  }
}
